<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background_2">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="330dp"
            android:layout_height="550dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="#FFFCFC"
            app:cardCornerRadius="8dp"
            app:cardElevation="16dp"
            app:cardMaxElevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/openAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="0dp"
                    android:text="@string/openAccount"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="הכנס שם פרטי"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="הכנס שם משפחה"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/bussinesname"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="הכנס שם עסק"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/category"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="בחר קטגוריה"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/adrress"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="הכנס כתובת"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="הכנס כתובת מייל"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="@string/enter_phone"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="בחר סיסמה"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textSize="14dp" />


                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="אימות סיסמה"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="50dp"
                    android:text="אני מסכים לתנאי השימוש" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    tools:layout_editor_absoluteX="-129dp"
                    tools:layout_editor_absoluteY="633dp" />

                <Button
                    android:id="@+id/continue_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-63dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="6dp"
                    android:background="#4CAF50"
                    android:text="המשך"
                    android:textColor="#fff"
                    android:textSize="25dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>