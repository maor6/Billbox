<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FC177"
    tools:context="Activities.Business_HomeActivity"
    tools:visibility="visible">


    <ImageButton
        android:id="@+id/inventory_bt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="42dp"
        android:background="#77A640"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/docs_bt"
        app:layout_constraintEnd_toStartOf="@+id/newDoc_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/inventory_icon" />

    <ImageButton
        android:id="@+id/info_bt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="134dp"
        android:adjustViewBounds="true"
        android:background="#77A640"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/docs_bt"
        app:layout_constraintTop_toBottomOf="@+id/newDoc_bt"
        app:srcCompat="@drawable/business_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="190dp"
        android:text="Billbox"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/inventory_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="87dp"
        android:text="Hello user"
        app:layout_constraintBottom_toTopOf="@+id/newDoc_bt"
        app:layout_constraintEnd_toEndOf="@+id/newDoc_bt"
        app:layout_constraintStart_toStartOf="@+id/inventory_bt"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/newDoc_bt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="37dp"
        android:adjustViewBounds="true"
        android:background="#77A640"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/info_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inventory_bt"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/new_doc_icon" />

    <ImageButton
        android:id="@+id/docs_bt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="138dp"
        android:adjustViewBounds="true"
        android:background="#77A640"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/info_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_bt"
        app:srcCompat="@drawable/docs_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>