<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background_2">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="330dp"
            android:layout_height="570dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="#FFFCFC"
            app:cardCornerRadius="8dp"
            app:cardElevation="16dp"
            app:cardMaxElevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/openAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="0dp"
                    android:text="@string/openAccount"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="@string/enterFirstName"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="@string/enterLastName"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/bussinesname"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="הכנס שם עסק"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/category"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="בחר קטגוריה"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/adrress"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="@string/enterAddress"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="@string/enterEmail"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp">

                    <EditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="109dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edt_back"
                        android:gravity="end"
                        android:hint="@string/enter_phone"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/cpp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showNameCode="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/phoneNumber"
                        tools:layout_editor_absoluteY="0dp"
                        android:layout_marginHorizontal="10dp">

                    </com.hbb20.CountryCodePicker>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="@string/enterPassword"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:gravity="end"
                    android:textSize="14sp"/>


                <EditText
                    android:id="@+id/verPassword"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_back"
                    android:hint="@string/verPassword"
                    android:gravity="end"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textSize="14sp"/>

                <CheckBox
                    android:id="@+id/termsAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="50dp"
                    android:text="@string/agreeForTerms" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="36dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="-18dp"
                    android:layout_gravity="center"
                     />

                <Button
                    android:id="@+id/continue_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-60dp"
                    android:layout_marginRight="20dp"
                    android:background="#4CAF50"
                    android:text="@string/continue1"
                    android:textColor="#fff"
                    android:textSize="25sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>